extends ../shared/layout
block main-content
    .jumbotron.text-center(ng-controller='UsersUpdateController as vm' ng-init="user=#{JSON.stringify(userToUpdate)}")
        h2
          | Personal Info
          
        .form-group
            h4.col-lg-3.control-label Username:
            
            .col-lg-8
                input.form-control(value='#{userToUpdate.username}', type='text' ng-model='user.username')
        
        .form-group
            h4.col-lg-3.control-label First name:
            
            .col-lg-8
                input.form-control(type='text' ng-model='user.firstName')
                
        .form-group
            h4.col-lg-3.control-label Last name:
            
            .col-lg-8
                input.form-control(type='text' ng-model='user.lastName')
                
        .form-group
            h4.col-lg-3.control-label Phone:
            
            .col-lg-8
                input.form-control(type='text' ng-model='user.phone')
        
        .form-group
            h4.col-lg-3.control-label Password:
            
            .col-lg-8
                input.form-control(type='password' ng-model='user.password')
                
        .form-group
            h4.col-lg-3.control-label Confirm Password:
            
            .col-lg-8
                input.form-control(type='password' ng-model='user.confirmPassword')   
                
        .form-group
            .col-md-8
                button.btn.btn-primary(ng-click="vm.updateProfile(user)") Save Changes
                a.btn.btn-default(href="/profile") Cancel
                 

                