extends shared/layout
block main-content
	.container
		.jumbotron
			h1 Welcome to JustOffice
			p The perfect place to search for stuff for your office place - tables, chairs, cabinets and many more!
			p
				a.btn.btn-primary.btn-lg(href='/products') Go shopping
		<br>
		table.table.table-stripped.table-hover
			thead
				tr
					th Category
					th Product Name
					th Price
					th Image
					th
			tbody
				each product in collection
					tr
						td(style='vertical-align:middle')= product.category
						td(style='vertical-align:middle')= product.name
						td(style='vertical-align:middle')= product.price
						td(style='vertical-align:middle')
							img.image_table.img-rounded(src=product.image)
						td(style='vertical-align:middle')
							a.btn.btn-sm(href='/product/' + product.id) Product Details
